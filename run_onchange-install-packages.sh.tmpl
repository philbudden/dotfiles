#!/bin/bash

set -euo pipefail

# Template logic: use exact hostname as profile, fallback to 'devcontainer' if not found
{{- $profile := output "hostname" }}
{{- $profiles := index .profiles $profile | default (index .profiles "devcontainer") }}
{{- $commands := .commands }}
{{- $managers := index . "package-managers" }}
{{- $packages := .packages }}

echo "ğŸš€ Applying profile for: {{ $profile }}"
echo -n "ğŸ“¦ Resolved groups:"
{{- range $profiles }} echo -n " {{ . }}"{{ end }}
echo

# Track which managers have already run preflight
{{- $ranPreflight := dict }}

# Loop over each group in the profile
{{- range $group := $profiles }}
  echo "ğŸ”§ Processing group: {{ $group }}"

  {{- $groupManagers := index $managers $group }}
  {{- if $groupManagers }}
    {{- range $manager := $groupManagers }}
      echo "  ğŸ› ï¸ Using manager: {{ $manager }}"

      # Run preflight once per manager if defined
      {{- if not (index $ranPreflight $manager) }}
        {{- $preflight := index $commands $manager "preflight" | default "" }}
        {{- if $preflight }}
          echo "  ğŸš¦ Running preflight for {{ $manager }}"
          {{ $preflight }}
        {{- end }}
        {{- $_ := set $ranPreflight $manager true }}
      {{- end }}

      # Get install command and packages
      {{- $cmd := index $commands $manager "install" | join " " | default (index $commands $manager | join " ") }}
      {{- $groupPackages := index (index $packages $group) $manager }}

      {{- if $groupPackages }}
        {{- range $pkg := $groupPackages }}
          echo "    ğŸ“¦ Installing {{ $pkg }} with {{ $manager }}"
          {{ $cmd }} {{ $pkg }}
        {{- end }}
      {{- else }}
        echo "    âš ï¸ No packages defined for manager '{{ $manager }}' in group '{{ $group }}'"
      {{- end }}
    {{- end }}
  {{- else }}
    echo "  âš ï¸ No managers defined for group '{{ $group }}'"
  {{- end }}
{{- end }}

